{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "incremental": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "dom",
      "es2020"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
